shell bash             # Tell screen your default shell
startup_message off    # turn off start message
vbell off              # Kein visuelles Blinken
msgwait 1              # Set messages timeout to one second
defutf8 on             # utf8 bei neuen fenstern
autodetach on          # on = default
shelltitle '$ |bash'   # Dynamic window titled for running program
hardcopydir $HOME      # Screenshots ins Homeverzeichnis
defscrollback 10000    # Buffer
defmonitor off         # Aktivit√§ten nicht in Fenstertitel schreiben
nethack on             # Turn on nethack error messages
backtick 0 0 0 whoami  # Set "%0`" to equal the output of "whoami"

#escape ^Oo

#caption always "%{= wk} %{= KW} [%n %t] %{-}%+w %= | @%H | %l | %Y-%m-%d %c "
hardstatus alwayslastline "%{= wk} %{= KW} %= | %H | %Y-%m-%d %c "
